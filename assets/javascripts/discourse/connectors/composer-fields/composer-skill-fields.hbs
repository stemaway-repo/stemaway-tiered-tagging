{{#unless model.replyingToTopic}}
  {{multi-select
    class="composer-pathway-field"
    content=pathways
    nameProperty="name"
    valueProperty="name"
    value=model.pathway
    onChange=(action "updatePathwayTags")
    options=(hash none="stemaway_tiered_tagging.pathways.none")
  }}
  {{popup-input-tip validation=pathwayValidation}}

  {{#if showSkills}}
    {{multi-select
      class="composer-skill-field"
      content=skills
      valueProperty="name"
      nameProperty="name"
      value=model.skill
      onChange=(action "updateSkillTags")
      options=(hash none="stemaway_tiered_tagging.skills.none")
    }}
    {{popup-input-tip validation=skillValidation}}
  {{/if}}

  {{#if showSubSkills}}
    {{multi-select
      class="composer-sub-skill-field"
      content=subSkills
      valueProperty="name"
      nameProperty="name"
      value=model.subSkill
      onChange=(action "updateSubSkillTags")
      options=(hash none="stemaway_tiered_tagging.sub_skills.none")
    }}
    {{popup-input-tip validation=subSkillValidation}}
  {{/if}}
{{/unless}}